
extends ../layout

block content
  script(type='text/javascript').
    function setParams(){
      $.ajax({
      type: "PUT",
      contentType: "application/json",
      url: '/limit',
      data: JSON.stringify(getFormData($("#configureform"))),
      dataType: "json",
      success: function (msg) {
        console.log('Success');
      }
      });
    }

  h1 Configure
  div
    form(role='form' method='PUT' class='form-horizontal' id="configureform")
      div(class='form-group')
        label(class='control-label col-sm-2') Loss
        div(class='col-sm-10')
          input(type='text' name='loss')

       div(class='form-group')
        label(class='control-label col-sm-2') Delay
        div(class='col-sm-10')
          input(type='text' name='delay')

       div(class='form-group')
        div(class='col-sm-10')
          input(class='btn btn-default' type='button' onclick='setParams()' value='Set')